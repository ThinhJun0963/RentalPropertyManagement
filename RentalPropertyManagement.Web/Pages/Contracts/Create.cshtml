@page
@model RentalPropertyManagement.Web.Pages.Contracts.CreateModel
@{
    ViewData["Title"] = "Create Contract";
}

<h2>Create New Contract</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Contract.TenantName" class="control-label"></label>
                <input asp-for="Contract.TenantName" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Contract.PropertyAddress" class="control-label"></label>
                <input asp-for="Contract.PropertyAddress" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Contract.MonthlyRent" class="control-label"></label>
                <input asp-for="Contract.MonthlyRent" class="form-control" type="number" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Contract.StartDate" class="control-label"></label>
                <input asp-for="Contract.StartDate" class="form-control" type="date" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Contract.EndDate" class="control-label"></label>
                <input asp-for="Contract.EndDate" class="form-control" type="date" />
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="./Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>