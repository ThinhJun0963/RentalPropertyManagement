@page
@model RentalPropertyManagement.Web.Pages.Contracts.CreateModel
@{
    ViewData["Title"] = "Tạo Hợp đồng";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Tạo Hợp đồng mới</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        @* CẬP NHẬT: Hiện tất cả các lỗi tại đây *@
                        <div asp-validation-summary="All" class="text-danger mb-3 fw-bold"></div>

                        <div class="mb-3">
                            <label class="form-label">Tài sản trống</label>
                            <select asp-for="Contract.PropertyId" class="form-select" asp-items="Model.PropertyList">
                                <option value="">-- Chọn tài sản --</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Người thuê</label>
                            <select asp-for="Contract.TenantId" class="form-select" asp-items="Model.TenantList">
                                <option value="">-- Chọn khách hàng --</option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ngày bắt đầu</label>
                                <input asp-for="Contract.StartDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Ngày kết thúc</label>
                                <input asp-for="Contract.EndDate" type="date" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tiền thuê hàng tháng (VNĐ)</label>
                            <input asp-for="Contract.RentAmount" type="number" class="form-control" />
                        </div>

                        <div class="mt-4 text-end">
                            <a asp-page="./Index" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-success">Lập hợp đồng</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Phải có 2 script này để validation hoạt động ngay trên trình duyệt *@
    <partial name="_ValidationScriptsPartial" />
}