@page "{id:int}"
@model RentalPropertyManagement.Web.Pages.Contracts.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa Hợp đồng";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="./Index">Quản lý Hợp đồng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-warning py-3">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-edit"></i> Cập nhật thông tin Hợp đồng</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Trường ẩn ID rất quan trọng để hệ thống biết cần cập nhật hợp đồng nào *@
                        <input type="hidden" asp-for="Contract.Id" />
                        <input type="hidden" asp-for="Contract.PropertyId" />
                        <input type="hidden" asp-for="Contract.TenantId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tài sản & Người thuê (Cố định)</label>
                            <div class="p-2 bg-light border rounded">
                                <div><i class="fas fa-map-marker-alt text-primary me-2"></i> @Model.Contract.PropertyAddress</div>
                                <div><i class="fas fa-user text-success me-2"></i> @Model.Contract.TenantName</div>
                            </div>
                            <div class="form-text">Lưu ý: Không thể thay đổi đối tượng thuê và tài sản sau khi đã lập hợp đồng.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Contract.StartDate" class="form-label fw-bold">Ngày bắt đầu</label>
                                <input asp-for="Contract.StartDate" type="date" class="form-control" />
                                <span asp-validation-for="Contract.StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Contract.EndDate" class="form-label fw-bold">Ngày kết thúc</label>
                                <input asp-for="Contract.EndDate" type="date" class="form-control" />
                                <span asp-validation-for="Contract.EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Contract.RentAmount" class="form-label fw-bold">Số tiền thuê (VNĐ/tháng)</label>
                            <div class="input-group">
                                <span class="input-group-text">₫</span>
                                <input asp-for="Contract.RentAmount" type="number" step="1000" class="form-control" />
                            </div>
                            <span asp-validation-for="Contract.RentAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Contract.Status" class="form-label fw-bold text-danger">Trạng thái Hợp đồng</label>
                            <select asp-for="Contract.Status" class="form-select border-danger" asp-items="Model.StatusList">
                            </select>
                            <span asp-validation-for="Contract.Status" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                            <a asp-page="./Index" class="btn btn-outline-secondary px-4 me-md-2">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm">
                                <i class="fas fa-save"></i> Lưu các thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}