@page
@model RentalPropertyManagement.Web.Pages.Contracts.IndexModel
@{
    ViewData["Title"] = "Quản lý Hợp đồng";
}

<h1 class="h2 mb-4">📜 Danh sách Hợp đồng</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo Hợp đồng Mới</a>
</p>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tài sản</th>
            <th>Người thuê</th>
            <th>Tiền thuê</th>
            <th>Ngày bắt đầu</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contracts)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.PropertyAddress</td>
                <td>@item.TenantName</td>
                <td>@item.RentAmount.ToString("N0") VNĐ</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>
                    @{
                        string badgeClass = item.Status switch
                        {
                            RentalPropertyManagement.DAL.Enums.ContractStatus.Active => "bg-success",
                            RentalPropertyManagement.DAL.Enums.ContractStatus.Pending => "bg-warning",
                            RentalPropertyManagement.DAL.Enums.ContractStatus.Expired => "bg-secondary",
                            _ => "bg-danger"
                        };
                    }
                    <span class="badge @badgeClass">@item.Status.ToString()</span>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Sửa/Kích hoạt</a>
                    @* TODO: Thêm nút Delete *@
                </td>
            </tr>
        }
    </tbody>
</table>