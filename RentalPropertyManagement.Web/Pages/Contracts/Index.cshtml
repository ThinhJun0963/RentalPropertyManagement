@page
@model RentalPropertyManagement.Web.Pages.Contracts.IndexModel
@{
    ViewData["Title"] = "Quản lý Hợp đồng";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-file-signature text-success"></i> Danh sách Hợp đồng</h2>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo Hợp đồng mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Tài sản</th>
                        <th>Người thuê</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Tiền thuê</th>
                        <th>Trạng thái</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Contracts != null && Model.Contracts.Any())
                    {
                        foreach (var item in Model.Contracts)
                        {
                            <tr>
                                <td><small class="fw-bold">@item.PropertyAddress</small></td>
                                <td>@item.TenantName</td>
                                <td>@item.StartDate.ToShortDateString()</td>
                                <td>@(item.EndDate?.ToShortDateString() ?? "Vô thời hạn")</td>
                                <td>@item.RentAmount.ToString("N0") VNĐ</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case RentalPropertyManagement.DAL.Enums.ContractStatus.Active:
                                            <span class="badge bg-success">Đang hiệu lực</span>
                                            break;
                                        case RentalPropertyManagement.DAL.Enums.ContractStatus.Pending:
                                            <span class="badge bg-warning text-dark">Chờ ký</span>
                                            break;
                                        case RentalPropertyManagement.DAL.Enums.ContractStatus.Expired:
                                            <span class="badge bg-secondary">Hết hạn</span>
                                            break;
                                        case RentalPropertyManagement.DAL.Enums.ContractStatus.Terminated:
                                            <span class="badge bg-danger">Đã chấm dứt</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa hợp đồng này?')"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                Chưa có hợp đồng nào trong hệ thống.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>