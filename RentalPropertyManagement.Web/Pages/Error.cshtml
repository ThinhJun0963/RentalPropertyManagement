@page
@model ErrorModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="text-center mt-5">
    <h1 class="display-1 text-danger">Lỗi!</h1>
    <p class="lead">Đã xảy ra lỗi không mong muốn. Vui lòng thử lại sau.</p>
    <p class="text-muted">Mã lỗi: @Model.RequestId</p>
    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
    <a asp-page="/Index" class="btn btn-primary mt-3">Quay về Trang chủ</a>
</div>