@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard Chính";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Chào mừng, @Model.UserFullName!</h1>
        <p class="lead">Bạn đang đăng nhập với vai trò: <strong>@Model.UserRole</strong></p>
    </div>

    @* Bảng Thống kê (Chỉ hiển thị cho Landlord) *@
    @if (Model.UserRole == "Landlord")
    {
        <h2 class="mb-3 border-bottom pb-2">Thống kê Tổng quan (Contracts)</h2>
        <div class="row mb-5">

            <div class="col-md-3 mb-4">
                <div class="card text-white bg-primary shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h4 class="card-title mb-0">@Model.TotalContracts</h4>
                                <p class="card-text">Tổng Hợp đồng</p>
                            </div>
                            <div class="col-4 text-end">
                                <i class="fas fa-file-contract fa-3x"></i>
                            </div>
                        </div>
                    </div>
                    <a asp-page="/Contracts/Index" class="card-footer text-white text-decoration-none">
                        Chi tiết <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card text-white bg-success shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h4 class="card-title mb-0">@Model.ActiveContracts</h4>
                                <p class="card-text">Hợp đồng đang Hoạt động</p>
                            </div>
                            <div class="col-4 text-end">
                                <i class="fas fa-check-circle fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card text-white bg-warning shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h4 class="card-title mb-0">@Model.ExpiringSoonContracts</h4>
                                <p class="card-text">Sắp hết hạn (90 ngày)</p>
                            </div>
                            <div class="col-4 text-end">
                                <i class="fas fa-calendar-times fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card text-white bg-info shadow">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-8">
                                <h4 class="card-title mb-0">@Model.TotalMonthlyRent.ToString("N0") VNĐ</h4>
                                <p class="card-text">Tổng Thu hàng tháng</p>
                            </div>
                            <div class="col-4 text-end">
                                <i class="fas fa-wallet fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <h2 class="mb-4 border-bottom pb-2">Chức năng Chính</h2>
    }

    @* Hiển thị các chức năng chính dựa trên vai trò (Giữ nguyên phần này và cập nhật link Contracts) *@
    <div class="row justify-content-center">

        @if (Model.UserRole == "Landlord")
        {
            <div class="col-md-4 mb-3">
                <a asp-page="/Contracts/Index" class="btn btn-primary btn-lg w-100 py-3">
                    <i class="fas fa-file-contract"></i> Quản lý Hợp đồng
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a asp-page="/Maintenance/Inbox" class="btn btn-warning btn-lg w-100 py-3">
                    <i class="fas fa-tools"></i> Phê duyệt Bảo trì
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a asp-page="/Payments/Track" class="btn btn-success btn-lg w-100 py-3">
                    <i class="fas fa-money-check-alt"></i> Theo dõi Thanh toán
                </a>
            </div>
        }
        else if (Model.UserRole == "Tenant")
        {
            <div class="col-md-4 mb-3">
                <a asp-page="/Tenant/SubmitRequest" class="btn btn-danger btn-lg w-100 py-3">
                    <i class="fas fa-exclamation-triangle"></i> Gửi Yêu cầu Bảo trì
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a asp-page="/Tenant/MyContracts" class="btn btn-info btn-lg w-100 py-3">
                    <i class="fas fa-file-alt"></i> Xem Hợp đồng
                </a>
            </div>
            <div class="col-md-4 mb-3">
                <a asp-page="/Tenant/MakePayment" class="btn btn-success btn-lg w-100 py-3">
                    <i class="fas fa-wallet"></i> Thanh toán Tiền thuê
                </a>
            </div>
        }
        else if (Model.UserRole == "ServiceProvider")
        {
            <div class="col-md-6 mb-3">
                <a asp-page="/Provider/MyTasks" class="btn btn-secondary btn-lg w-100 py-3">
                    <i class="fas fa-tasks"></i> Công việc được giao
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a asp-page="/Provider/UpdateStatus" class="btn btn-primary btn-lg w-100 py-3">
                    <i class="fas fa-check-circle"></i> Cập nhật Trạng thái
                </a>
            </div>
        }
        else
        {
            <div class="col-12 alert alert-info text-center">
                <p>Vai trò của bạn chưa được cấu hình. Vui lòng liên hệ quản trị viên.</p>
            </div>
        }
        
    </div>
</div>