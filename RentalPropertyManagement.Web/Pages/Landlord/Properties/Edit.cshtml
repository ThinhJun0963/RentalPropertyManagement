@page "{id:int}"
@model RentalPropertyManagement.Web.Pages.Landlord.Properties.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa Tài sản";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="./Index">Quản lý Tài sản</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa thông tin Tài sản</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* Hidden ID field is crucial for the update logic *@
                        <input type="hidden" asp-for="Property.Id" />

                        <div class="mb-3">
                            <label asp-for="Property.Address" class="form-label fw-bold">Địa chỉ</label>
                            <input asp-for="Property.Address" class="form-control" />
                            <span asp-validation-for="Property.Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.City" class="form-label fw-bold">Thành phố</label>
                                <input asp-for="Property.City" class="form-control" />
                                <span asp-validation-for="Property.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Property.SquareFootage" class="form-label fw-bold">Diện tích (m²)</label>
                                <div class="input-group">
                                    <input asp-for="Property.SquareFootage" type="number" class="form-control" />
                                    <span class="input-group-text">m²</span>
                                </div>
                                <span asp-validation-for="Property.SquareFootage" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Property.MonthlyRent" class="form-label fw-bold">Giá thuê hàng tháng</label>
                            <div class="input-group">
                                <input asp-for="Property.MonthlyRent" type="number" step="0.01" class="form-control" />
                                <span class="input-group-text">VNĐ</span>
                            </div>
                            <span asp-validation-for="Property.MonthlyRent" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Property.Description" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="Property.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Property.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Property.IsOccupied">
                            <label class="form-check-label fw-bold" asp-for="Property.IsOccupied">
                                Trạng thái: Đã có người thuê
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="./Index" class="btn btn-outline-secondary me-md-2">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save"></i> Cập nhật thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}