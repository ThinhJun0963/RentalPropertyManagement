@page
@model RentalPropertyManagement.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center py-3">
                <h4 class="mb-0">ĐĂNG NHẬP</h4>
            </div>
            <div class="card-body p-4">

                @if (ViewData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @ViewData["Success"]
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="LoginRequest.Email" class="form-label">Địa chỉ Email</label>
                        <input asp-for="LoginRequest.Email" class="form-control" placeholder="example@mail.com" />
                        <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LoginRequest.Password" class="form-label">Mật khẩu</label>
                        <input asp-for="LoginRequest.Password" type="password" class="form-control" placeholder="******" />
                        <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Đăng nhập ngay</button>
                    </div>

                    <hr />

                    <div class="text-center mt-3">
                        <span>Chưa có tài khoản? </span>
                        <a asp-page="/Register" class="text-decoration-none fw-bold text-success">Đăng ký tại đây</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}