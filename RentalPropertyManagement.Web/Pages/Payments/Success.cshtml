@page
@model RentalPropertyManagement.Web.Pages.Payments.SuccessModel
@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Payment Successful</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle" style="font-size: 3rem; color: #28a745;"></i>
                    </div>

                    <h4 class="mb-3">Your payment has been successfully processed!</h4>

                    @if (!string.IsNullOrEmpty(Model.TransactionId))
                    {
                        <div class="alert alert-info">
                            <strong>Transaction ID:</strong> @Model.TransactionId
                        </div>
                    }

                    <div class="alert alert-light">
                        <p>Your rent payment has been received and confirmed.</p>
                        <p>You will receive a confirmation email shortly.</p>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-page="/Tenant/Dashboard" class="btn btn-primary btn-lg">Back to Dashboard</a>
                        <a asp-page="/Tenant/PayRent" class="btn btn-outline-primary btn-lg">View Invoices</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .fa-check-circle {
        animation: scaleIn 0.5s ease-in-out;
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>
