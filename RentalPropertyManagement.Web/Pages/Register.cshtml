@page
@model RentalPropertyManagement.Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card shadow-lg">
            <div class="card-header bg-success text-white text-center">
                <h3 class="mb-0">Đăng ký Tài khoản Người thuê mới</h3>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        @Model.ErrorMessage
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegisterRequest.FirstName" class="form-label">Họ</label>
                            <input asp-for="RegisterRequest.FirstName" class="form-control" />
                            <span asp-validation-for="RegisterRequest.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegisterRequest.LastName" class="form-label">Tên</label>
                            <input asp-for="RegisterRequest.LastName" class="form-control" />
                            <span asp-validation-for="RegisterRequest.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterRequest.Email" class="form-label">Email</label>
                        <input asp-for="RegisterRequest.Email" class="form-control" />
                        <span asp-validation-for="RegisterRequest.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterRequest.PhoneNumber" class="form-label">Số điện thoại (Tùy chọn)</label>
                        <input asp-for="RegisterRequest.PhoneNumber" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegisterRequest.Password" class="form-label">Mật khẩu</label>
                            <input asp-for="RegisterRequest.Password" type="password" class="form-control" />
                            <span asp-validation-for="RegisterRequest.Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegisterRequest.ConfirmPassword" class="form-label">Xác nhận Mật khẩu</label>
                            <input asp-for="RegisterRequest.ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="RegisterRequest.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="hidden" asp-for="RegisterRequest.Role" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg mt-3">Đăng ký</button>
                    </div>

                    <div class="text-center mt-3">
                        Đã có tài khoản? <a asp-page="/Login">Đăng nhập ngay</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}