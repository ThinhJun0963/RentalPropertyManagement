<style>
    .chat-btn-floating {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 9999; /* Tăng chỉ số này để chắc chắn nó nổi lên trên */
        border-radius: 50%;
        width: 60px;
        height: 60px;
        font-size: 24px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
        border: none;
        background-color: #0d6efd;
        color: white;
        cursor: pointer;
        display: flex; /* Căn giữa icon */
        align-items: center;
        justify-content: center;
    }

    .chat-box-container {
        position: fixed;
        bottom: 90px;
        right: 20px;
        width: 350px;
        max-width: 90%;
        z-index: 9999;
        display: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        background: #fff;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .chat-messages {
        height: 300px;
        overflow-y: auto;
        padding: 10px;
        background-color: #f8f9fa;
    }

    .message-item {
        margin-bottom: 10px;
        padding: 8px 12px;
        border-radius: 15px;
        font-size: 0.9rem;
        max-width: 80%;
        word-wrap: break-word;
    }

    .msg-others {
        background-color: #e9ecef;
        align-self: flex-start;
        margin-right: auto;
    }

    .msg-me {
        background-color: #0d6efd;
        color: white;
        align-self: flex-end;
        margin-left: auto;
    }

    .msg-meta {
        font-size: 0.7rem;
        margin-bottom: 2px;
        opacity: 0.8;
    }
</style>

<button class="chat-btn-floating" id="toggleChatBtn">
    💬
</button>

<div class="chat-box-container" id="chatBox">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center p-2 rounded-top">
        <h6 class="mb-0">Cộng đồng chung</h6>
        <button type="button" class="btn-close btn-close-white" id="closeChatBtn"></button>
    </div>

    <div class="card-body p-0 d-flex flex-column">
        <div class="chat-messages d-flex flex-column" id="messagesList">
            <div class="text-center text-muted small mt-2">Bắt đầu trò chuyện...</div>
        </div>
    </div>

    <div class="card-footer p-2">
        <div class="input-group">
            <input type="text" id="messageInput" class="form-control" placeholder="Nhập tin...">
            <button class="btn btn-primary" id="sendButton">Gửi</button>
        </div>
    </div>
</div>