@using RentalPropertyManagement.DAL.Enums
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rental Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentalPropertyManagement.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-primary fw-bold" asp-area="" asp-page="/Index">🏠 Rental Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Trang chủ</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Landlord"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary fw-bold" asp-page="/Landlord/Dashboard">📊 Bảng điều khiển</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Contracts/Index">Quản lý Hợp đồng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Maintenance/Inbox">Hòm thư Bảo trì</a>
                                </li>
                            }
                            else if (User.IsInRole("Tenant"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Tenant/MyContracts">Hợp đồng của tôi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Tenant/PayRent">Thanh toán tiền nhà</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/Tenant/SubmitRequest">🛠 Gửi yêu cầu sửa chữa</a>
                                </li>
                            }
                            else if (User.IsInRole("ServiceProvider"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-danger fw-bold" asp-page="/Provider/MyTasks">Nhiệm vụ sửa chữa</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Xin chào, <span id="userEmail">@User.Identity.Name</span>!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-link text-dark" asp-page="/Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <partial name="_ChatBox" />
    }
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RentalPropertyManagement - <a asp-area="" asp-page="/Privacy">Quyền riêng tư</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
    <script>
        const notificationConnection = new signalR.HubConnectionBuilder()
            .withUrl("/mainHub")
            .withAutomaticReconnect()
            .build();
        notificationConnection.on("ReceiveNotification", (title, body, url) => {
            toastr.info(`${body}`, `${title}`, {
                onclick: function () { window.location.href = url; },
                timeOut: 10000
            });
        });
        notificationConnection.start().catch(err => console.error("Notification Error: ", err));
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>