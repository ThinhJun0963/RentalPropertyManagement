@page
@model RentalPropertyManagement.Web.Pages.Tenant.PayRentModel
@{
    ViewData["Title"] = "Pay Rent";
}

<div class="container mt-4">
    <h1>Pay Your Rent</h1>

    @if (!Model.Invoices.Any())
    {
        <div class="alert alert-info" role="alert">
            You have no pending invoices at the moment.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Invoice ID</th>
                        <th>Contract</th>
                        <th>Amount (VND)</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model.Invoices)
                    {
                        <tr>
                            <td>#@invoice.Id</td>
                            <td>Contract @invoice.ContractId</td>
                            <td>@invoice.Amount.ToString("N0")</td>
                            <td>@invoice.DueDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @switch (invoice.Status)
                                {
                                    case 1:
                                        <span class="badge bg-warning">Pending</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-info">Processing</span>
                                        break;
                                    case 3:
                                        <span class="badge bg-success">Paid</span>
                                        break;
                                    case 4:
                                        <span class="badge bg-danger">Failed</span>
                                        break;
                                    case 5:
                                        <span class="badge bg-warning">Cancelled</span>
                                        break;
                                    case 6:
                                        <span class="badge bg-secondary">Refunded</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@invoice.StatusText</span>
                                        break;
                                }
                            </td>
                            <td>
                                @if (invoice.Status == 1)
                                {
                                    <a asp-page="/Payments/ProcessPayment" asp-route-invoiceId="@invoice.Id" class="btn btn-primary btn-sm">
                                        Pay Now
                                    </a>
                                }
                                else if (invoice.Status == 3)
                                {
                                    <span class="text-success">âœ“ Paid</span>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>@invoice.StatusText</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Tenant/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

<style>
    .table-responsive {
        margin-top: 20px;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }

    .btn-sm {
        font-size: 0.85rem;
    }
</style>
